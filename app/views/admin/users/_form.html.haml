= form_for([:admin, @user]) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :uid
    %br/
    = f.text_field :uid
  .field
    = f.label :screen_name
    %br/
    = f.text_field :screen_name
  .field
    = f.label :provider
    %br/
    = f.text_field :provider
  .actions
    = f.submit
