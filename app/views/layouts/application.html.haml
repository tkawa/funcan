!!!
%html
  %head
    %title FUNCAN
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{style: 'padding-top: 60px;'}
    %header.topbar
      .topbar-inner
        .container
          .brand
            FUNCAN 《ファンキャン》
          - if user_signed_in?
            = button_to 'sign out', sign_out_path, method: :delete, form_class: 'pull-right'
            %ul.secondary-nav
              %li= link_to "#{current_user.name} さん", '#'
          - else
            = button_to 'sign in with Twitter', sign_in_path, form_class: 'pull-right'
            -#%li= link_to 'sign in with Twitter', sign_in_path
    .container
      .content
        .row
          .span10
            = yield
          .span4
            side
    %footer
      - limit = Twitter.rate_limit_status
      API: #{limit.remaining_hits} / #{limit.hourly_limit}
